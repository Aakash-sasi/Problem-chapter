



//  problem 2: Write a program to check whether a triangle can be formed with the given values for the angles.

import java.util.Scanner;
class W1{
    public static void main(String[] args) {
        Scanner scan = new Scanner (System.in);
        System.out.println("Enter the angles");
        int a1 = scan.nextInt();

         int a2 = scan.nextInt();
          int a3 = scan.nextInt();
          int triangle = (a1+a2+a3);
          if (triangle ==180){
            System.out.println("triangle can be formed");
          }
else{
    System.out.println("the angle should be equal to 180");
}

        
    }
}




